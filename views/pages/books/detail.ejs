<% books.forEach(book => { %>
  <section id="searched_book>" class="book-view">
      <img src=<%= book.image %> />
      <h2><%= book.title %></h2>
      <h4><%= book.author %></h4>
      <!-- <p><%= book.description %></p> -->
      <!-- <p><%= book.isbn %></p> -->
      <p><%= book.bookshelf %></p>
      <a href="<%= href + book.id %>"><button class="viewDetails"><%= button[0] %></button></a>
      <%- include('../books/edit', { data: [book.title, book.author, book.description, book.isbn, book.image] }) %>
  </section>
<% }); %>